<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cn.henry.freewebwork.dao.RoleMapper">
    <select id="findByUserId" resultType="com.cn.henry.freewebwork.entity.Role">
        SELECT * FROM t_role WHERE id IN (SELECT roleid FROM role_user WHERE userid = #{userId})
    </select>
</mapper>